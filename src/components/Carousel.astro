<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<div class="carousel-wrapper">
  <div class="swiper carousel-3d">
    <div class="swiper-wrapper">
      <div class="swiper-slide" style="background-image: url('img/vanila1.jpg');">
        <label class="slide-title">Pastel Vainilla</label>
      </div>
      <div class="swiper-slide" style="background-image: url('img/vanila2.jpg');">
        <label class="slide-title">Pastel Chocolate</label>
      </div>
      <div class="swiper-slide" style="background-image: url('img/vanila3.jpg');">
        <label class="slide-title">Palmera</label>
      </div>
      <div class="swiper-slide" style="background-image: url('img/vanila4.jpg');">
        <label class="slide-title">Pastel Frutas</label>
      </div>
      <div class="swiper-slide" style="background-image: url('img/vanila5.jpg');">
        <label class="slide-title">Pastel frutos secos</label>
      </div>
    </div>

    <div class="swiper-pagination"></div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
  is:inline
></script>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    new Swiper(".carousel-3d", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: "auto",
      loop: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false
      },
      coverflowEffect: {
        rotate: 30,
        stretch: 0,
        depth: 180,
        modifier: 1,
        slideShadows: false
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev"
      }
    });
  });
</script>

<style>
.carousel-wrapper {
  width: 100%;
  max-width: 1200px;
  margin: 1rem auto;
  padding: 2rem 0;
}

.swiper {
    padding-bottom: 4em;
}

/* Slides */
.swiper-slide {
  width: 300px;
  height: 420px;
  background: white;
  border-radius: 18px;
  display: flex;
  align-items: end;
  justify-content: center;
  font-size: 1.4rem;
  font-weight: 600;
  box-shadow: 0 25px 50px rgba(0, 0, 0, 0.18);
  background-position: center;
  background-size: cover;
}

.slide-title {
  margin-bottom: .8rem;
  color: white;
}

/* Sombras 3D */
.swiper-slide-shadow-left,
.swiper-slide-shadow-right {
  background: rgba(0, 0, 0, 0.25);
}

/* Flechas */
.swiper-button-next,
.swiper-button-prev {
  color: #000;
}

/* Paginaci√≥n */
.swiper-pagination-bullet {
  background: #000;
  opacity: 0.4;
}
.swiper-pagination-bullet-active {
  opacity: 1;
}

/* Responsive */
@media (max-width: 768px) {
  .swiper-slide {
    width: 240px;
    height: 340px;
  }
}
</style>
