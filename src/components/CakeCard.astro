---
export interface Props {
  image: string;
  name: string;
  price: string | number;
  description?: string;
}
const { image, name, price, description } = Astro.props as Props;
---
<article class="card">
  <figure class="media">
    <img src={image} alt={name} loading="lazy" />
  </figure>
  <div class="content">
    <h3 class="title">{name}</h3>
    <div class="meta">
      <span class="price">${price}</span>
    </div>
    {description ? <p class="desc">{description}</p> : null}
  </div>
</article>

<style>
  .card {
    background: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(29, 24, 24, 0.08);
    transition: transform 160ms ease, box-shadow 160ms ease;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 14px 30px rgba(29, 24, 24, 0.12);
  }

  .media {
    width: 100%;
    aspect-ratio: 1 / 1; /* imagen cuadrada */
    margin: 0;
    overflow: hidden;
    background: #f6f2f0;
  }

  .media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .content {
    padding: 14px 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .title {
    margin: 0;
    font-size: 1rem;
    color: #5b3f3f;
  }

  .meta {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .price {
    font-weight: 700;
    color: #795757;
  }

  .desc {
    margin: 0;
    color: #6b4f4f;
    font-size: 0.9rem;
    opacity: 0.95;
  }

  @media (prefers-color-scheme: dark) {
    .card { background: #2b2222; }
    .title, .price, .desc { color: #f6eaea; }
  }
</style>